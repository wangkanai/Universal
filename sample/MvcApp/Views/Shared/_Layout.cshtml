<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Google Universal Analytics</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Html.Raw(Analytics.Analytic.Instance.Render(ViewBag.AnalyticSession))
</head>
<body>
    <div id="wrap">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Universal Analytics</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        @foreach (string action in ViewBag.Menu)
                        {
                            <li>@Html.ActionLink(action, action, "Home")</li>
                        }
                    </ul>
                </div>
            </div>   
</nav>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <pre><code class="inlinecode">@Analytics.Analytic.Instance.Render(ViewBag.AnalyticSession)</code></pre>
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Google Universal Analytics</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
